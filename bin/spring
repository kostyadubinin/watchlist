#!/usr/bin/env ruby
# frozen_string_literal: true

# This file loads spring without using Bundler, in order to be fast.
# It gets overwritten when you run the `spring binstub` command.

unless defined?(Spring)
  require "rubygems"
  require "bundler"

  regexp = /^GEM$.*?^    (?:  )*spring \((.*?)\)$.*?^$/m
  if (match = Bundler.default_lockfile.read.match(regexp))
    paths = [Bundler.bundle_path.to_s, *Gem.path].uniq.join(Gem.path_separator)
    Gem.paths = { "GEM_PATH" => paths }
    gem "spring", match[1]
    require "spring/binstub"
  end
end
